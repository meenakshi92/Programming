package trees;

class Node{
	int val;
	Node left;
	Node right;
	Node parent;
	Node(int val){
		this.val=val;
		this.left=null;
		this.right=null;
		this.parent=null;
	}
}
public class bst {
	Node root;
	bst(){
		root=null;
	}
	
	public void insert(int val){
		if(root==null)
			root=new Node(val);
		else{
			Node temp=root;
			Node prev=null;
			while(temp!=null){
				prev=temp;
				if(temp.val<=val)
					temp=temp.right;
				else
					temp=temp.left;
				
			}
			temp=new Node(val);
			temp.parent=prev;
		}
	}
	
	public void delete(int val){
		Node temp=root;
		while(temp!=null){
			if(temp.val==val)
				break;
			else if(temp.val<val)
				temp=temp.right;
			else
				temp=temp.left;
		}
		if(temp!=null){
			//element found,switch it with an end element
			Node runner=temp;
			Node prev=null;
			while(runner!=null){
				prev=runner;
				if(runner.left!=null)
					runner=runner.left;
				else
					runner=runner.right;
			}
			//swap the integers
			prev.val+=temp.val;
			temp.val=prev.val-temp.val;
			prev.val-=temp.val;
			
			//delete prev
			Node parent=prev.parent;
			if(parent.left.val==prev.val)
				parent.left=null;
			else
				parent.right=null;
		}
	}
}
